<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="testStatisticsDAO" class="org.tanaguru.entity.dao.statistics.TestStatisticsDAOImpl"/>
    <bean id="testStatisticsService" class="org.tanaguru.entity.service.statistics.TestStatisticsDataServiceImpl">
        <property name="entityDao" ref="testStatisticsDAO"/>
        <property name="entityFactory" ref="testStatisticsFactory"/>
    </bean>

    <bean id="themeStatisticsDAO" class="org.tanaguru.entity.dao.statistics.ThemeStatisticsDAOImpl"/>
    <bean id="themeStatisticsDataService" class="org.tanaguru.entity.service.statistics.ThemeStatisticsDataServiceImpl">
        <property name="entityDao" ref="themeStatisticsDAO"/>
        <property name="entityFactory" ref="themeStatisticsFactory"/>
    </bean>

    <bean id="webResourceStatisticsDAO" class="org.tanaguru.entity.dao.statistics.WebResourceStatisticsDAOImpl"/>
    <bean id="webResourceStatisticsDataService" class="org.tanaguru.entity.service.statistics.WebResourceStatisticsDataServiceImpl">
        <property name="entityDao" ref="webResourceStatisticsDAO"/>
        <property name="entityFactory" ref="webResourceStatisticsFactory"/>
        <property name="criterionStatisticsDAO" ref="criterionStatisticsDAO"/>
       	<property name="themeStatisticsDAO" ref="themeStatisticsDAO" />
    </bean>
    
    <bean id="criterionStatisticsDAO" class="org.tanaguru.entity.dao.statistics.CriterionStatisticsDAOImpl">
        <property name="selectAllThemeKey" value="all-theme"/>
    </bean>
    <bean id="criterionStatisticsDataService" class="org.tanaguru.entity.service.statistics.CriterionStatisticsDataServiceImpl">
        <property name="entityDao" ref="criterionStatisticsDAO"/>
        <property name="entityFactory" ref="criterionStatisticsFactory"/>
    </bean>

</beans>